<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/itemMarket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:buttonTint="@drawable/bg_radio_button"
        android:text="@string/app_name"
        android:textColor="@drawable/bg_radio_button"
        app:layout_constraintEnd_toStartOf="@+id/btnMarket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnMarket"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Купить"
        android:textColor="@color/blackP"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_btn_circle"
        app:layout_constraintBottom_toBottomOf="@+id/itemMarket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemMarket" />

</androidx.constraintlayout.widget.ConstraintLayout>