<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/titleProduct"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Семечки"
        android:textSize="15sp"
        android:textColor="@color/blackP"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/titlePrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="200 $"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/blackP"
        app:layout_constraintBottom_toBottomOf="@+id/titleProduct"
        app:layout_constraintStart_toEndOf="@+id/titleProduct"
        app:layout_constraintTop_toTopOf="@+id/titleProduct" />

    <TextView
        android:id="@+id/titleCount"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="200"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/blackP"
        app:layout_constraintBottom_toBottomOf="@+id/titlePrice"
        app:layout_constraintStart_toEndOf="@+id/titlePrice"
        app:layout_constraintTop_toTopOf="@+id/titlePrice" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/titleSell"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/white"
        android:text="0"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/blackP"
        app:layout_constraintBottom_toBottomOf="@+id/titleCount"
        app:layout_constraintStart_toEndOf="@+id/titleCount"
        app:layout_constraintTop_toTopOf="@+id/titleCount" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_btn_circle"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:text="Купить"
        android:textColor="@color/blackP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleSell"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Продать"
        android:paddingVertical="6dp"
        android:textColor="@color/blackP"
        android:background="@drawable/bg_btn_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>